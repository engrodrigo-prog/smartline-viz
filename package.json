{
  "name": "smartline-viz",
  "private": true,
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "dev:web": "pnpm -C apps/web dev",
    "dev:api": "pnpm -C apps/api dev",
    "dev:worker": "python workers/media/python/main.py",
    "dev:all": "bash -c 'pnpm -C apps/api dev & pnpm -C apps/web dev & python workers/media/python/main.py'",
    "build:web": "pnpm -C apps/web build",
    "build:api": "pnpm -C apps/api build",
    "deploy:dist": "npx vercel --prod --yes --cwd ./apps/web/dist",
    "pub": "pnpm build:web && pnpm deploy:dist",
    "deploy:web:auto": "node scripts/deploy-web.mjs"
  }
}
